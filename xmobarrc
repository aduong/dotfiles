       , overrideRedirect = True
       , commands = [ Run Cpu ["-H","50", "--high","red"] 20
                    , Run Memory ["-t","Mem: <usedratio>%",
                                  "-H", "70", "--high", "red"] 20
                    , Run Swap ["-H", "0", "--high", "red"] 20
                    , Run Date "%a %_d %b %Y %H:%M:%S" "date" 10
                    , Run Brightness ["-t", "Bright: <percent>%"] 10
                    , Run BatteryP ["BAT0"]
                              ["-t", "Batt: <acstatus>",
                               "-L", "10", "-H", "80", "--low", "red",
                               "--",
                               "-O", "<fc=#09f><left>%</fc>",
                               "-i", "<left>%",
                               "-o", "<left>%/<timeleft>",
                               "-f", "ADP0/online"
                               ] 50
                    , Run Wireless "wlan0" [ "-t", "<essid> <qualitybar>"
                                           , "-L", "50", "--low", "red"] 50
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<action=`gnome-system-monitor`>%cpu% | %memory% | %swap%</action> \
                     \} %StdinReader% { \
